<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.EditUserInfoFragment">

    <EditText
        android:id="@+id/editTextPrettyName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="24dp"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageViewCrab"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/editTextPrettyName"
        app:layout_constraintStart_toStartOf="@id/editTextPrettyName"
        android:layout_marginTop="40dp"
        android:clickable="true"
        />

    <ImageView
        android:id="@+id/imageViewUnicorn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/editTextPrettyName"
        app:layout_constraintEnd_toEndOf="@id/editTextPrettyName"
        android:layout_marginTop="40dp"
        android:clickable="true"
        />

    <ImageView
        android:id="@+id/imageViewAlien"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/imageViewCrab"
        app:layout_constraintStart_toStartOf="@id/editTextPrettyName"
        android:layout_marginTop="40dp"
        android:clickable="true"
        />

    <ImageView
        android:id="@+id/imageViewRobot"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/imageViewUnicorn"
        app:layout_constraintEnd_toEndOf="@id/editTextPrettyName"
        android:layout_marginTop="40dp"
        android:clickable="true"
        />



    <ImageView
        android:id="@+id/imageViewOctopus"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/imageViewAlien"
        app:layout_constraintStart_toStartOf="@id/editTextPrettyName"
        android:layout_marginTop="40dp"
        android:clickable="true"
        />

    <ImageView
        android:id="@+id/imageViewFrog"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/imageViewRobot"
        app:layout_constraintEnd_toEndOf="@id/editTextPrettyName"
        android:layout_marginTop="40dp"
        />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabFinishEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        app:srcCompat="@drawable/ic_baseline_done_24"
        />



</androidx.constraintlayout.widget.ConstraintLayout>